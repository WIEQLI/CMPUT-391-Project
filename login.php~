			<div id="header">
				<div id="titlebar">
					<h1>Radiology Information System</h1>
				</div>
			</div>
				<div id="content-wrap" class="styleform">
					<?php
						if(!$_SESSION['id']):
						// If you are not logged in
					?>
					<!-- Login Form -->
					<h2>Login</h2>
					<h3>*required field</h3>
					<div id="alertbox">
					</div>
					<form name="form1" action='usermanagement/php/insertperson.php' method="post" class='ajaxform'>
						<?php
							if($_SESSION['msg']['login-err']) {
								echo '<div class="err">'.$_SESSION['msg']['login-err'].'</div>';
								unset($_SESSION['msg']['login-err']);
								// This will output login errors, if any
							}
						?>
						<label for="username">*First Name</label><input id="username" name="username" type="text"></br>
						<label for="password">*Last Name:</label><input id="passowrd" name="password" type="text"></br>
						<input type="submit" name="submit" value="Create person">
					</form>
					<?php
						else:
						// If you are logged in
					?>
					<!-- Login Form -->
				
